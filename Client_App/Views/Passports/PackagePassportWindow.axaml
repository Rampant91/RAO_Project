        xmlns:local="using:Client_App.Behaviors"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client_App.PackagePassportWindow"
        Title="PackagePassportWindow">
	<StackPanel HorizontalAlignment="Center">

		<!--Header-->

		<StackPanel>
			<TextBlock Margin="5" 
					   FontWeight="Bold"
					   FontSize="18"
					   Text="ПАСПОРТ" 
					   TextAlignment="Center"/>
			<TextBlock Margin="5" 
					   FontWeight="Bold"
					   FontSize="14"
					   Text="на упаковку твердых радиоактивных отходов" 
					   TextAlignment="Center"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
				<TextBlock Margin="5" 
						   FontWeight="Bold"
						   Text="№"/>
				<TextBox Margin="5" 
						 MinWidth="150"
						 Watermark="(паспорта)"/>
				<TextBlock Margin="5" 
						   FontWeight="Bold"
						   Text="от"/>
				<TextBox Margin="5" 
						 MinWidth="150"
						 Watermark="(дата)"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<TextBlock Margin="5" 
						   FontWeight="Bold"
						   Text="Наименование"/>
				<TextBox Margin="5" 
						 MinWidth="300"
						 Watermark="(тип упаковки РАО, неупакованных РАО)"/>
			</StackPanel>
		
		</StackPanel>
		
