			<TextBox Grid.Row="0" Grid.Column="2" Margin="5"
					 Watermark="(название РАО)"/>
			<TextBox Grid.Row="0" Grid.Column="3" Margin="5"
					 Watermark="(класс РАО)"/>
			
			<TextBlock Grid.Row="1" Grid.Column="0" Margin="5" 
					   HorizontalAlignment="Right"
					   Text="Номер договора передачи РАО на захоронение"/>
			<TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>
			
			<TextBlock Grid.Row="2" Grid.Column="0" Margin="5"
					   HorizontalAlignment="Right"
					   Text="Индивидуальный номер упаковки РАО"/>
			<TextBox Grid.Row="2" Grid.Column="1" Margin="5"
					   Watermark="(Идентификационный код)"/>
			<TextBox Grid.Row="2" Grid.Column="2" Margin="5"
					 Watermark="(тип ПУОД)"/>
			<TextBox Grid.Row="2" Grid.Column="3" Margin="5"
					 Watermark="(идентификатор(ы) ПУОД)"/>
			
			<TextBlock Grid.Row="3" Grid.Column="0" Margin="5"
					   HorizontalAlignment="Right"
					   Text="Организация-собственник упаковки РАО"/>
			<TextBox Grid.Row="3" Grid.Column="1" Margin="5"
					 Grid.ColumnSpan="2"
					 Watermark="Название организации"/>
			<TextBox Grid.Row="3" Grid.Column="3" Margin="5"
					 Watermark="ОКПО"/>
			
			<TextBlock Grid.Row="4" Grid.Column="0" Margin="5"
					   HorizontalAlignment="Right"
					   Text="Организация-изготовитель упаковки РАО"/>
