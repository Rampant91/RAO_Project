<Window
    x:Class="Client_App.Form_12"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Forms.Forms1"
    xmlns:converter="clr-namespace:Client_App.VisualRealization.Converters"
	xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
    Title="Form_12"
    d:DesignHeight="450"
    d:DesignWidth="900"
    x:DataType="vm:Form_12VM"
    mc:Ignorable="d"
	x:Name="mainWindow">

    <Window.Resources>
        <converter:FractionConverter x:Key="FractionConverter"/>
		<SolidColorBrush x:Key="PrimaryColor" Color="#5685c0"/> 
    </Window.Resources>

	<Window.Styles>
		<Style Selector="TextBlock.Title1">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
        <Style Selector="TextBlock.Title2">
            <Setter Property="Margin" Value="1"/>
			<Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Left"/>
		    <Setter Property="TextTrimming" Value="WordEllipsis"/>
        </Style>
		<Style Selector="TextBlock.Title3">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Center"/>
		    <Setter Property="TextTrimming" Value="None"/>
        
        </Style>
	
	</Window.Styles>

    <Design.DataContext>
        <vm:Form_12VM/>
    </Design.DataContext>

	<Grid RowDefinitions ="Auto,*,100,100,100">
		<StackPanel
			Grid.Row ="0"
			Orientation ="Horizontal">
			<Grid Margin="5" RowDefinitions ="*,*,*,*,*">
				<StackPanel Orientation ="Horizontal" Grid.Row="0">
					<TextBlock Margin="5" >Дата окончания предыдущего отчетного периода:</TextBlock>
					<DatePicker Margin="5" ></DatePicker>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="1">
					<TextBlock Margin="5" >Дата окончания настоящего отчетного периода:</TextBlock>
					<DatePicker Margin="5" ></DatePicker>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="2">
					<TextBlock Margin="5" >Номер корректировки:</TextBlock>
					<TextBox Margin="5" ></TextBox>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="3">
					<Button Margin="5" >Проверить</Button>
					<Button Margin="5" >Сохранить</Button>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="4">
					<TextBlock Margin="5" >Автозаполнение:</TextBlock>
					<CheckBox Margin="5" ></CheckBox>
				</StackPanel>
			</Grid>

			<Grid Margin="5" RowDefinitions ="*,*,*,*,*">
				<StackPanel Orientation ="Horizontal" Grid.Row="0">
					<TextBlock Margin="5" >ФИО исполнителя:</TextBlock>
					<TextBox Margin="5" ></TextBox>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="1">
					<TextBlock Margin="5" >Должность:</TextBlock>
					<TextBox Margin="5" ></TextBox>
				</StackPanel>


				<StackPanel Orientation ="Horizontal" Grid.Row="2">
					<TextBlock Margin="5" >Телефон:</TextBlock>
					<TextBox Margin="5" ></TextBox>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="3">
					<TextBlock Margin="5" >Номер корректировки:</TextBlock>
					<TextBox Margin="5" ></TextBox>
				</StackPanel>

				<StackPanel Orientation ="Horizontal" Grid.Row="4">
					<Button Margin="5" >Скопировать данные предыдущей формы</Button>
				</StackPanel>
			</Grid>

			<Button Height="42" Margin="5" > Перевести все РВ в РАО</Button>
		</StackPanel>
		<StackPanel Grid.Row="1">
			<ScrollViewer HorizontalScrollBarVisibility="Auto">
				<DataGrid 
					ItemsSource="{Binding FormList}"
					AutoGenerateColumns ="True"
					CanUserResizeColumns="True" 
					AlternatingRowBackground="LightBlue">
				</DataGrid>
			</ScrollViewer>
		</StackPanel>
		<StackPanel Grid.Row="2" Background="{StaticResource PrimaryColor}" Margin="5"></StackPanel>
		<StackPanel Grid.Row="3" Background="{StaticResource PrimaryColor}" Margin="5"></StackPanel>
		<StackPanel Grid.Row="4" Background="{StaticResource PrimaryColor}" Margin="5"></StackPanel>
	
	</Grid>
</Window>
