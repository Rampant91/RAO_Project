<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Messages"
    Width="430"
    Height="350"
    MinWidth="430"
    MinHeight="350"
    Title="Запрос региона и номеров форм"
    WindowStartupLocation="CenterScreen"
    x:Class="Client_App.Views.Messages.GetRegionAndFormNums"
    x:DataType="vm:GetRegionAndFormNumsVM"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:GetRegionAndFormNumsVM/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="130" MaxHeight="200"/>
            <RowDefinition Height="2*" MinHeight="150" MaxHeight="400"/>
            <RowDefinition Height="0.5*" MinHeight="50" MaxHeight="75"/>
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="5,5,5,0"
            Padding="0,5,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Left"
                    Margin="5, 5 , 5, 10"
                    Text="Укажите номер региона из двух цифр. Если поле будет не заполнено или заполнено некорректно, проверка наличия инвентаризации будет выполнена для всех организаций без ограничения по региону."
                    Width="400"
                    TextWrapping="Wrap"/>
                <TextBox
                    Margin="5, 10"
                    Width="200"
                    Text="{Binding Region}"/>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Margin="5"
            Padding="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Left"
                    Margin="5, 5 , 5, 25"
                    Text="Выберите номера форм, по которым необходимо выполнить проверку:"
                    Width="400"
                    TextWrapping="Wrap"/>
                <Grid
                    ColumnDefinitions="100,Auto"
                    RowDefinitions="30,30,30,30,30,30"
                    VerticalAlignment="Center">
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        Margin="5, 0"
                        VerticalAlignment="Center"
                        Text="Выбрать все:"/>
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        Margin="5, 0"
                        VerticalAlignment="Center"
                        Text="Форма 1.1:"/>
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        Margin="5, 0"
                        VerticalAlignment="Center"
                        Text="Форма 1.3:"/>
                    <CheckBox
                        Grid.Column="1"
                        Grid.Row="0"
                        Name="All"
                        Margin="15, 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsThreeState="True"
                        Checked ="AllCheckBox_Checked"
                        Unchecked="AllCheckBox_Unchecked"
                        IsChecked="{Binding CheckAll, Mode=TwoWay}"/>
                    <CheckBox
                        Grid.Column="1"
                        Grid.Row="1"
                        Click="AnyCheckBox_Clicked"
                        Name="Form11"
                        Margin="15, 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding CheckForm11, Mode=TwoWay}"/>
                    <CheckBox
                        Grid.Column="1"
                        Grid.Row="2"
                        Click="AnyCheckBox_Clicked"
                        Name="Form13"
                        Margin="15, 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding CheckForm13, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </Border>
        <WrapPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Margin="0,5"
            MaxHeight="50">
            <Grid ColumnDefinitions="*,*">
                <Button
                    Grid.Column="0"
                    IsDefault="True"
                    Margin="0, 0, 10, 0"
                    Name="Ok"
                    Width="80"
                    Height="30"
                    Content="Ок"
                    Click="OkButtonClick"/>
                <Button
                    Grid.Column="1"
                    IsCancel="True"
                    Margin="0, 0, 10, 0"
                    Name="Cancel"
                    Width="80"
                    Height="30"
                    Content="Отмена"
                    Click="CancelButtonClick"/>
            </Grid>
        </WrapPanel>
    </Grid>
</Window>
