<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client_App.AskIntMessageWindow"
        Title="Введите число"
		Width="320"
		Height="200">
	<StackPanel>
		<TextBlock Margin="5" Text="{Binding Text}" TextWrapping="Wrap"/>
		<TextBox Margin="5" Text="{Binding Result}"/>
		<WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
			<Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">Подтвердить</Button>
			<Button Content="Отмена" Click="Cancel_Click"/>
		</WrapPanel>
	</StackPanel>
</Window>
