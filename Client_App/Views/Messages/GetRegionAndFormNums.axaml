<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Client_App.ViewModels.Messages"
        xmlns:behaviors="clr-namespace:Client_App.Behaviors"
        mc:Ignorable="d"
        x:Class="Client_App.Views.Messages.GetRegionAndFormNums"
        x:CompileBindings="True"
        x:DataType="vm:GetRegionAndFormNumsVM"
        Title="Запрос региона и номеров форм"
        MinWidth="300"
        MinHeight="400"
        d:DesignWidth ="420"
        d:DesignHeight ="500"
        behaviors:WindowScreenSizeBehavior.WidthRatio="0.25"
        behaviors:WindowScreenSizeBehavior.HeightRatio="0.55"
        WindowStartupLocation="Manual"
        CanResize="True">

    <Design.DataContext>
        <vm:GetRegionAndFormNumsVM/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="130" MaxHeight="200"/>
            <RowDefinition Height="2*" MinHeight="150" MaxHeight="400"/>
            <RowDefinition Height="0.5*" MinHeight="50" MaxHeight="75"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Margin="5,5,5,0"
                Padding="0,5,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel Orientation="Vertical">
                <TextBlock HorizontalAlignment="Left"
                           Margin="5, 5 , 5, 10"
                           Text="Укажите номер региона из двух цифр. Если поле будет не заполнено или заполнено некорректно, проверка наличия инвентаризации будет выполнена для всех организаций без ограничения по региону."
                           Width="400"
                           TextWrapping="Wrap"/>
                <MaskedTextBox Margin="5, 10"
                               Width="200"
                               Mask="00"
                               Name="RegionMaskedTextBox"
                               Text="{Binding Region}"/>
            </StackPanel>
        </Border>
        <Grid Row="0" ColumnDefinitions="*,*"/>
        <Border Grid.Row="1"
                Margin="5"
                Padding="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left"
                           Margin="5, 5 , 5, 25"
                           Text="Выберите номера форм, по которым необходимо выполнить проверку, а также графы, определяющие учётную единицу:"
                           Width="400"
                           TextWrapping="Wrap"/>
                <Grid ColumnDefinitions="100,50,75,100,50"
                      RowDefinitions="30,30,30,30,30,30"
                      VerticalAlignment="Center">
                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Выбрать все:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Форма 1.1:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Форма 1.3:"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="0"
                              Name="AllForms"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsThreeState="True"
                              Checked ="AllFormsCheckBox_Checked"
                              Unchecked="AllFormsCheckBox_Unchecked"
                              IsChecked="{Binding CheckAllForms, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="1"
                              Click="AnyFormCheckBox_Clicked"
                              Name="Form11"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckForm11, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="2"
                              Click="AnyFormCheckBox_Clicked"
                              Name="Form13"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckForm13, Mode=TwoWay}"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Выбрать все:"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Номер паспорта:"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Тип:"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="3"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Радионуклиды:"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="4"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Заводской номер:"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="5"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Номер упаковки:"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="0"
                              Name="AllSnkParams"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsThreeState="True"
                              Checked ="AllSnkParamsCheckBox_Checked"
                              Unchecked="AllSnkParamsCheckBox_Unchecked"
                              IsChecked="{Binding CheckAllSnkParams, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="1"
                              Click="AnySnkParamsCheckBox_Clicked"
                              Name="PasNum"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckPasNum, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="2"
                              Click="AnySnkParamsCheckBox_Clicked"
                              Name="Type"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckType, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="3"
                              Click="AnySnkParamsCheckBox_Clicked"
                              Name="Radionuclids"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckRadionuclids, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="4"
                              Click="AnySnkParamsCheckBox_Clicked"
                              Name="FacNum"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckFacNum, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="4"
                              Grid.Row="5"
                              Click="AnySnkParamsCheckBox_Clicked"
                              Name="PackNumber"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckPackNumber, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </Border>
        <WrapPanel Grid.Row="2"
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   MaxHeight="50">
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0"
                        IsDefault="True"
                        Margin="0, 0, 10, 0"
                        Name="Ok"
                        Width="80"
                        Height="30"
                        Content="Ок"
                        Click="OkButtonClick"/>
                <Button Grid.Column="1"
                        IsCancel="True"
                        Margin="0, 0, 10, 0"
                        Name="Cancel"
                        Width="80"
                        Height="30"
                        Content="Отмена"
                        Click="CancelButtonClick"/>
            </Grid>
        </WrapPanel>
    </Grid>
</Window>