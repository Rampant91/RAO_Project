<Window
    x:Class="Client_App.Views.Forms.Forms2.Form_22"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Client_App.Views.Controls"
    xmlns:converter="clr-namespace:Client_App.VisualRealization.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:Models.Forms;assembly=Models"
    xmlns:forms2="clr-namespace:Models.Forms.Form2;assembly=Models"
    xmlns:interactivity="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:local="using:Client_App.Behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Forms.Forms2"
    x:Name="2.2"
    Title="{Binding WindowTitle}"
    MinWidth="800"
    MinHeight="600"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    x:DataType="vm:Form_22VM"
    KeyDown="DataGrid_KeyDown"
    KeyUp="DataGrid_KeyUp"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <converter:DataGridLengthToGridLengthConverter x:Key="LengthConverter" />
        <converter:NullToStringConverter x:Key="NullToStringConverter" />
        <converter:DateConverter x:Key="DateConverter" />
        <converter:IsOperation41AndSingleSelectionConverter x:Key="Op41AndOneSelectedConverter" />
    </Window.Resources>

    <Design.DataContext>
        <vm:Form_22VM />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="175" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#region Верхний блок данных-->

        <Expander
            Grid.Row="0"
            Header="Скрыть/Раскрыть верхнюю панель"
            IsExpanded="True">
            <WrapPanel Classes="header">

                <!--#region Отчёт-->

                <Border Classes="borderContainer">
                    <controls:SelectReportPopup
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DataContext="{Binding SelectReportPopupVM}" />
                </Border>

                <Border Classes="borderContainer">
                    <Grid Margin="5" RowDefinitions="*,*,*,*,*">

                        <Grid ColumnDefinitions="*,*"  Grid.Row="0">
							<TextBlock Grid.Column="0" Margin="5" >Отчетный год</TextBlock>
							<TextBox Grid.Column="1" Text="{Binding Report.Year.Value}"/>
						</Grid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Margin="5,10" Text="Номер корректировки:" />
                            <TextBox
                                Width="75"
                                Margin="5"
                                Text="{Binding Path=Report.CorrectionNumber.Value}" />
                        </StackPanel>
						
						<StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Margin="5,10" Text="Суммирование:"/>
                            <ToggleSwitch  />
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <Button
                                Margin="5"
                                Command="{Binding CheckForm}"
                                Content="Проверить" />
                            <Button
                                Margin="5"
                                Command="{Binding SaveReport}"
                                Content="Сохранить" />
                        </StackPanel>

                    </Grid>
                </Border>

				<Border Classes="borderContainer">
					<controls:ExecutorDataControl
						DataContext="{Binding ExecutorDataControlVM}">
					</controls:ExecutorDataControl>
				</Border>
				
				<Border Classes="borderContainer">
					<Grid Margin="5" RowDefinitions="Auto,Auto,Auto">
						
                        <Button
                            Grid.Row="2"
                            Margin="5"
                            Command="{Binding SetDefaultColumnWidth}"
                            CommandParameter="{Binding ElementName=dataGrid}"
                            Content="Выставить ширину колонок по умолчанию" />
                    </Grid>
                </Border>

                <!--#endregion Дополнительные функции-->

            </WrapPanel>
        </Expander>

		<ScrollViewer Classes="tableScrollViewer" Grid.Row="1">

            <Grid x:Name="Table" RowDefinitions="Auto,*" ColumnDefinitions="Auto">
                <Grid.ContextMenu>
                    <ContextMenu
                        x:CompileBindings="True"
                        x:DataType="vm:Form_22VM"
                        DataContext="{Binding DataContext, ElementName=dataGrid}">
                        <MenuItem
                            Command="{Binding SelectAll}"
                            Header="Выделить всё"
                            InputGesture="Ctrl+A"
                            IsHitTestVisible="True" />
                        <MenuItem
                            Command="{Binding AddRow}"
                            Header="Добавить строку"
                            InputGesture="Ctrl+T" />
                        <MenuItem
                            Command="{Binding AddRows}"
                            Header="Добавить N строк"
                            InputGesture="Ctrl+N" />
                        <MenuItem
                            Command="{Binding AddRowsIn}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Добавить N строк перед"
                            InputGesture="Ctrl+I"
                            IsVisible="{Binding AnyRowSelected}" />
                        <MenuItem
                            Command="{Binding CopyRows}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Копировать"
                            InputGesture="Ctrl+C"
                            IsVisible="{Binding AnyRowSelected}" />
                        <MenuItem
                            Command="{Binding PasteRows}"
                            Header="Вставить"
                            InputGesture="Ctrl+V"
                            IsVisible="{Binding AnyRowSelected}" />
                        <MenuItem
                            Command="{Binding DeleteRows}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Удалить выбранные строчки"
                            InputGesture="Ctrl+D"
                            IsVisible="{Binding AnyRowSelected}" />
                        <MenuItem
                            Command="{Binding DeleteDataInRows}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Очистить строчки"
                            InputGesture="Ctrl+U"
                            IsVisible="{Binding AnyRowSelected}" />
                        <MenuItem
                            Command="{Binding SetNumberOrder}"
                            Header="Выставить номер"
                            InputGesture="Ctrl+O" />
                        <!--<MenuItem Header="Сортировать по номеру п/п	Ctrl+L"
                                      Command="{Binding SortForms}"
                                      HotKey="Ctrl+L"/>-->
                        <MenuItem
                            Command="{Binding CopyPasName}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Скопировать в буфер имя паспорта"
                            InputGesture="Ctrl+K"
                            IsVisible="{Binding OnlyOneRowSelected}" />
                        <MenuItem
                            Command="{Binding OpenPas}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Открыть паспорт"
                            InputGesture="Ctrl+P"
                            IsVisible="{Binding OnlyOneRowSelected}" />
                        <MenuItem
                            Command="{Binding ExcelExportSourceMovementHistory}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Выгрузка истории движения источника"
                            InputGesture="Ctrl+E"
                            IsVisible="{Binding OnlyOneRowSelected}" />
                        <MenuItem
                            Command="{Binding CategoryCalculationFromReport}"
                            CommandParameter="{Binding SelectedForms}"
                            Header="Рассчитать категорию"
                            InputGesture="Ctrl+Y"
                            IsVisible="{Binding OnlyOneRowSelected}" />
                        <MenuItem
                            Command="{Binding SourceTransmission}"
                            CommandParameter="{Binding SelectedForm}"
                            Header="Перевести РВ в РАО"
                            InputGesture="Ctrl+J">
                            <MenuItem.IsVisible>
                                <MultiBinding Converter="{StaticResource Op41AndOneSelectedConverter}">
                                    <Binding Path="OnlyOneRowSelected" />
                                    <Binding Path="SelectedForm" />
                                </MultiBinding>
                            </MenuItem.IsVisible>
                        </MenuItem>
                    </ContextMenu>
                </Grid.ContextMenu>

                <!--#endregion Контекстное меню-->

                <!--#region Заголовки таблицы-->

                <Grid
                    Grid.Row="0"
                    Width="{Binding ElementName=dataGrid.Width}"
                    Classes="tableHeader"
                    ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
                    RowDefinitions="Auto,Auto,Auto">

                    <interactivity:Interaction.Behaviors>
                        <local:ColumnWidthSyncBehavior SourceDataGrid="{Binding ElementName=dataGrid}" />
                    </interactivity:Interaction.Behaviors>

                    <!--#region Первый уровень заголовков-->

                    <Border
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0">
                        <TextBlock Text="№ п/п"/>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <TextBlock Text="Пункт хранения"/>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.ColumnSpan="3">
                        <TextBlock Text="УКТ, упаковка или иная учетная единица"/>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="8"
                        Grid.ColumnSpan="2">
                        <TextBlock Text="Объем, куб. м"/>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="10"
                        Grid.ColumnSpan="2">
                        <TextBlock Text="Масса, т"/>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="13"
                        Grid.ColumnSpan="4">
                        <TextBlock Text="Суммарная активность, Бк"/>
                    </Border>

                    <!--#endregion Второй уровень заголовков-->

                    <Border Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="наименование"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="2">
                        <TextBlock Text="код"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3">
                        <TextBlock Text="наименование"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="4">
                        <TextBlock Text="тип"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="5">
                        <TextBlock Text="количество, шт."/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="6">
                        <TextBlock Text="Код РАО"/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="7">
                        <TextBlock Text="Статус РАО"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="8">
                        <TextBlock Text="РАО без упаковки"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="9">
                        <TextBlock Text="РАО с упаковкой "/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="10">
                        <TextBlock Text="РАО без упаковки (нетто)"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="11">
                        <TextBlock Text="РАО с упаковкой (брутто)"/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="12">
                        <TextBlock Text="Количство ОЗИИИ, шт."/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="13">
                        <TextBlock Text="тритий"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="14">
                        <TextBlock Text="бета-, гамма- излучающие радионуклиды (исключая тритий)"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="15">
                        <TextBlock Text="альфа-излучающие радионуклиды(исключая трансурановые)"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="16">
                        <TextBlock Text="трансурановые радионуклиды"/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="17">
                        <TextBlock Text="Основные радионуклиды"/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="18">
                        <TextBlock Text="Субсидия, %"/>
                    </Border>
                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="19">
                        <TextBlock Text="Номер мероприятия ФЦП"/>
                    </Border>

                    <!--#endregion Второй уровень заголовков-->

                </Grid>

                <!--#endregion Заголовки таблицы-->

                <!--#region DataGrid-->

                <DataGrid
                    x:Name="dataGrid"
                    Grid.Row="1"
					Classes="table"
					x:CompileBindings="True"
					CanUserSortColumns="True"
					CanUserReorderColumns="False"
					Items="{Binding FormList}"
					SelectedItem="{Binding SelectedForm}"
					ColumnWidth="125">

                    <interactivity:Interaction.Behaviors>
                        <local:DataGridColumnWidthLoadBehavior FormNum="2.2" />
                        <local:DataGridPointerBehavior />
                        <local:DataGridSelectedItemsBehavior SelectedItems="{Binding SelectedForms, Mode=TwoWay}" />
                        <local:DeselectDataGridOnClickOutsideBehavior />
                        <local:DataGridEditingStateBehavior IsEditing="{Binding DataGridIsEditing, Mode=TwoWay}" />
                        <local:DataGridAlternateArrowsKeyBehavior IsEditing="{Binding DataGridIsEditing, Mode=OneWay}" />
                    </interactivity:Interaction.Behaviors>

					<DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding NumberInOrder.Value}"
											Width="40"
											IsReadOnly="True"
											x:DataType="forms2:Form22">
							<DataGridTextColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="1"/>
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTextColumn.HeaderTemplate>
						</DataGridTextColumn>

						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="2"/>
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms2:Form22">
									<TextBox Text="{Binding StoragePlaceName.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						
						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="3"/>
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms2:Form22">
									<TextBox Text="{Binding StoragePlaceCode.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>


                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="4" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding PackName.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="5" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding PackType.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="6" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding PackQuantity.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="7" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding CodeRAO.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="8" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding StatusRAO.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="9" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding VolumeOutOfPack.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="10" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding VolumeInPack.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="11" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding MassOutOfPack.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="12" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding MassInPack.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="13" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding QuantityOZIII.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="14" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding TritiumActivity.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="15" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding BetaGammaActivity.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="16" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding AlphaActivity.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="17" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding TransuraniumActivity.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
						
						<DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="18" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding MainRadionuclids.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="19" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding Subsidy.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Classes="headerTemplate">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="20" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="forms2:Form22">
                                    <TextBox Text="{Binding FcpNumber.Value, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!--#endregion DataGrid-->

            </Grid>
        </ScrollViewer>

        <!--#endregion Таблица-->

        <!--#region Выбор страницы-->

        <Border Grid.Row="2" Classes="pageControlContainer">
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto">
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    Text="Текущая страница" />
                <controls:NumericLeftRight
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    Minimum="1"
                    Value="{Binding CurrentPage}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5"
                    Text="Кол-во страниц:" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="5"
                    Text="{Binding TotalPages}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Text="Кол-во строчек на странице" />
                <controls:NumericLeftRight
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Minimum="1"
                    Value="{Binding RowCount}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    Text="Всего строчек:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    Text="{Binding TotalRows}" />
            </Grid>
        </Border>

        <!--#endregion Выбор страницы-->

        <!--#region Примечания-->

        <Expander
            Grid.Row="3"
            ExpandDirection="Up"
            Header="Скрыть/Раскрыть нижнюю панель"
            IsExpanded="True">
            <Border Classes="notesContainer">
                <Grid ColumnDefinitions="Auto" RowDefinitions="Auto,Auto">
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding AddNote}" Header="Добавить строку" />
                            <MenuItem Command="{Binding AddNotes}" Header="Добавить N строк" />
                            <MenuItem
                                Command="{Binding CopyNotes}"
                                CommandParameter="{Binding SelectedNotes}"
                                Header="Копировать" />
                            <MenuItem Command="{Binding PasteNotes}" Header="Вставить" />
                            <MenuItem
                                Command="{Binding DeleteNotes}"
                                CommandParameter="{Binding SelectedNotes}"
                                Header="Удалить выбранные строчки" />
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <TextBlock
                        Grid.Row="0"
                        Margin="5"
                        Text="Примечания" />
                    <DataGrid
                        x:Name="notesTable"
                        Grid.Row="1"
                        x:CompileBindings="True"
                        Classes="notesTable"
                        Items="{Binding NoteList}"
                        SelectedItem="{Binding SelectedNote}">

                        <interactivity:Interaction.Behaviors>
                            <local:DataGridColumnWidthLoadBehavior FormNum="notes" />
                            <local:DataGridPointerBehavior />
                            <local:DataGridSelectedItemsBehavior SelectedItems="{Binding SelectedNotes, Mode=TwoWay}" />
                        </interactivity:Interaction.Behaviors>

                        <DataGrid.Columns>

                            <DataGridTemplateColumn Width="80" Header="№ строки">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="forms:Note">
                                        <TextBox Text="{Binding RowNumber.Value, Mode=TwoWay}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="80" Header="№ графы">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="forms:Note">
                                        <TextBox Text="{Binding GraphNumber.Value, Mode=TwoWay}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="250" Header="Пояснения">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="forms:Note">
                                        <TextBox Text="{Binding Comment.Value, Mode=TwoWay}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Expander>

        <!--#endregion Примечания-->

    </Grid>
</Window>