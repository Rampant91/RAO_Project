<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client_App.Views.Messages.AskDatePeriodMessageWindow"
        Title="AskDatePeriodMessageWindow">

    <Grid 
        ColumnDefinitions="0.45*,0.1*,0.45*"
        RowDefinitions="0.5*,0.25*,0.25*">
        <TextBlock 
            Grid.Column="0" 
            Grid.ColumnSpan="3" 
            Grid.Row="0"
            Text="Введите период дат, за который необходимо выполнить выгрузку. Если оставить поля незаполненными или заполнить некорректно, то выгрузка будет осуществляться без фильтра по датам."/>

    </Grid>
</Window>

