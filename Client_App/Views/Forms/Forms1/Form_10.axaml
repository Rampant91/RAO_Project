<Window
    x:Class="Client_App.Views.Forms.Forms1.Form_10"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Forms.Forms1"
    xmlns:converterType="clr-namespace:Client_App.Resources.ConverterType"
    Title="Form_10"
    Name="Форма 1.0"
    Width="{Binding Source={x:Type converterType:Width}, Converter={StaticResource RatioConverter}, ConverterParameter='0.5', FallbackValue='600', Mode=OneTime}"
    Height="{Binding Source={x:Type converterType:Height}, Converter={StaticResource RatioConverter}, ConverterParameter='0.75', FallbackValue='800', Mode=OneTime}"
    MinWidth="950"
    MinHeight="600"
    x:CompileBindings="True"
    x:DataType="vm:Form_10VM"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:Form_10VM/>
    </Design.DataContext>

    <Grid>
        <!-- TopTable -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="200"/>
            <RowDefinition Height="2*" MinHeight="400"/>
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            MinHeight="200"
            MaxHeight="200"
            Margin="5,5,5,0"
            Padding="0,5,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid ColumnDefinitions="250,400" RowDefinitions="*,*,*">
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,3,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="Регистрационный номер:"/>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="300"
                    Height="30"
                    Margin="0,3,5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding Storage.RegNoRep.Value}"/>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="Сокращенное наименование:"/>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="300"
                    Height="30"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding Storage.ShortJurLicoRep.Value}"/>
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="ОКПО:"/>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="300"
                    Height="30"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding  Storage.OkpoRep.Value}"/>
            </Grid>

        </Border>
        <!-- ScrollData -->
        <ScrollViewer
            Grid.Row="1"
            MinHeight="400"
            Margin="0,5,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Stretch"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!-- Орган управления -->
                <Border
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Grid VerticalAlignment="Center" ColumnDefinitions="210,300">
                        <TextBlock
                            Grid.Column="0"
                            Height="32"
                            Margin="5,0,0,0"
                            IsEnabled="False"
                            Text="Орган управления использованием атомной энергии"
                            TextWrapping="Wrap"/>
                        <TextBox
                            Grid.Column="1"
                            Height="42"
                            Margin="0,3"
                            AcceptsReturn="True"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            Text="{Binding Storage.Rows10[0].OrganUprav_DB}"
                            TextWrapping="Wrap"/>
                    </Grid>
                </Border>
                <!-- Юридическое лицо -->
                <Border
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Grid ColumnDefinitions="210,300" RowDefinitions="*,*">
                        <!-- Юридическое лицо - Наименования полей -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            Margin="5,0,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Юридическое лицо"/>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,5,0,0">
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Субъект Российской федерации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Наименование юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Сокращенное наименование"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Адрес места нахождения юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Фактический адрес юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="ФИО, должность руководителя"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Телефон организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Факс организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Электронная почта организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКПО"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКВЭД"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКОГУ"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКТМО"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ИНН"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="КПП"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКОПФ"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКФС"/>
                        </StackPanel>
                        <!-- Юридическое лицо - Значения в базе -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <TextBox
                                Height="26"
                                Margin="0,0,0,3"
                                Text="{Binding  Storage.Rows10[0].SubjectRF_DB}"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[0].JurLico_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].ShortJurLico_DB}"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[0].JurLicoAddress_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[0].JurLicoFactAddress_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[0].GradeFIO_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Telephone_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Fax_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Email_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Okpo_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Okved_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Okogu_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Oktmo_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Inn_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Kpp_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Okopf_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[0].Okfs_DB}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- Территориальное обособленное подразделение -->
                <Border
                    Margin="5,0,5,5"
                    Padding="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5"
                    IsVisible="{Binding IsSeparateDivision}">
                    <Grid ColumnDefinitions="210,300" RowDefinitions="*,*">
                        <!-- Территориальное обособленное подразделение - Наименования полей -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            Margin="5,0,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Территориальное обособленное подразделение"/>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,5,0,0">
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Субъект Российской федерации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Наименование юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Сокращенное наименование"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Адрес места нахождения юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="Фактический адрес юр. лица"/>
                            <TextBlock
                                Height="32"
                                Margin="5,8"
                                Text="ФИО, должность руководителя"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Телефон организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Факс организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="Электронная почта организации"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКПО"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКВЭД"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКОГУ"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКТМО"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ИНН"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="КПП"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКОПФ"/>
                            <TextBlock
                                Height="32"
                                Margin="5,0"
                                Text="ОКФС"/>
                        </StackPanel>
                        <!-- Территориальное обособленное подразделение - Значения в базе -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <TextBox
                                Height="26"
                                Margin="0,0,0,3"
                                Text="{Binding Storage.Rows10[1].SubjectRF_DB}"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[1].JurLico_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].ShortJurLico_DB}"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[1].JurLicoAddress_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[1].JurLicoFactAddress_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="42"
                                Margin="0,3"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Text="{Binding Storage.Rows10[1].GradeFIO_DB}"
                                TextWrapping="Wrap"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Telephone_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Fax_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Email_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Okpo_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Okved_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Okogu_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Oktmo_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Inn_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Kpp_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Okopf_DB}"/>
                            <TextBox
                                Height="26"
                                Margin="0,3"
                                Text="{Binding Storage.Rows10[1].Okfs_DB}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>