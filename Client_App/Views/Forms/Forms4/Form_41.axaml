<Window
    x:Class="Client_App.Views.Forms.Forms4.Form_41"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Forms.Forms4"
    xmlns:converter="clr-namespace:Client_App.VisualRealization.Converters"
	xmlns:local="using:Client_App.Behaviors"
	xmlns:interactivity="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:forms4="clr-namespace:Models.Forms.Form4;assembly=Models"
    xmlns:forms="clr-namespace:Models.Forms;assembly=Models"
	xmlns:behaviors="using:Avalonia.Xaml.Interactions.Core"
	xmlns:controls="clr-namespace:Client_App.Views.Controls"
    Title="Форма 4.1"
    d:DesignHeight="450"
    d:DesignWidth="900"
    x:DataType="vm:Form_41VM"
    mc:Ignorable="d"
    KeyUp="DataGrid_KeyUp"
	x:Name="4.1"
	WindowStartupLocation="CenterScreen"
	MinWidth="800" MinHeight="600">

	<Window.Resources>
		<converter:DataGridLengthToGridLengthConverter x:Key="LengthConverter"/>
		<converter:NullToStringConverter x:Key="NullToStringConverter"/>
		<converter:DateConverter x:Key="DateConverter"/>
		<converter:IntToEmptyStringConverter x:Key="IntToEmptyStringConverter"/>
		<converter:RowColorConverter x:Key="RowColorConverter"/>
		<converter:ColorBlendConverter x:Key="ColorBlendConverter"/>
		<converter:SystemDrawingColorToSolidColorBrush x:Key="SystemDrawingColorToSolidColorBrush"/>
	</Window.Resources>

	<Design.DataContext>
		<vm:Form_41VM/>
	</Design.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*" MinHeight="175"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Expander Grid.Row ="0"
				  IsExpanded="True"
                  Header="Скрыть/Раскрыть верхнюю панель">
			<WrapPanel Classes="header">
				<Border Classes="borderContainer">
					<controls:SelectReportPopup
                        Grid.Row="1"
                        DataContext="{Binding SelectReportPopupVM}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
				</Border>
				<Border Classes="borderContainer">
					<Grid Margin="5" RowDefinitions="*,*,*,*,*">

						<Grid ColumnDefinitions="*,*"  Grid.Row="0">
							<TextBlock Grid.Column="0" Margin="5" >Отчетный год</TextBlock>
							<TextBox Grid.Column="1" Text="{Binding Report.Year.Value}"/>
						</Grid>

						<StackPanel Orientation="Horizontal" Grid.Row="1">
							<Button Margin="5" Command="{Binding CheckForm}">Проверить</Button>
							<Button Margin="5" Command="{Binding SaveReport}">Сохранить</Button>
						</StackPanel>

						<StackPanel  Orientation="Horizontal" Grid.Row="2">
							<TextBlock Margin="5">Номер корректировки:</TextBlock>
							<TextBox Margin="5" Width="75" Text="{Binding Path=Report.CorrectionNumber.Value}"/>
						</StackPanel>

						<Button Grid.Row="3" Content="Сформировать" Command="{Binding GenerateForm41}" ></Button>
					</Grid>
				</Border>
				
				<Border Classes="borderContainer">
					<controls:ExecutorDataControl DataContext="{Binding ExecutorDataControlVM}"/>
				</Border>

				<Border Classes="borderContainer">
					<Button
						Margin="5"
						Command="{Binding SetDefaultColumnWidth}"
						CommandParameter="{Binding ElementName=dataGrid}"
						Content="Выставить ширину колонок по умолчанию" />
				</Border>

			</WrapPanel>
		</Expander>

		<ScrollViewer Classes="tableScrollViewer" Grid.Row="1">
			<Grid x:Name="Table" RowDefinitions="Auto,*" ColumnDefinitions="Auto">
				<Grid.ContextMenu>
					<ContextMenu x:CompileBindings="True"
                                 x:DataType="vm:Form_41VM"
                                 DataContext="{Binding DataContext, ElementName=dataGrid}">
						<MenuItem Header="Выделить всё"
                                  Command="{Binding SelectAll}"
                                  IsHitTestVisible="True"
                                  InputGesture="Ctrl+A"/>
						<MenuItem Header="Добавить строку"
                                  Command="{Binding AddRow}"
                                  InputGesture="Ctrl+T"/>
						<MenuItem Header="Добавить N строк"
                                  Command="{Binding AddRows}"
                                  InputGesture="Ctrl+N"/>
						<MenuItem Header="Добавить N строк перед"
                                  Command="{Binding AddRowsIn}"
                                  CommandParameter="{Binding SelectedForms}"
                                  InputGesture="Ctrl+I"/>
						<MenuItem Header="Копировать"
                                  Command="{Binding CopyRows}"
                                  CommandParameter="{Binding SelectedForms}"
                                  InputGesture="Ctrl+C"/>
						<MenuItem Header="Вставить"
                                  Command="{Binding PasteRows}"
                                  InputGesture="Ctrl+V"/>
						<MenuItem Header="Удалить выбранные строчки"
                                  Command="{Binding DeleteRows}"
                                  CommandParameter="{Binding SelectedForms}"
                                  InputGesture="Ctrl+D"/>
						<MenuItem Header="Очистить строчки"
                                  Command="{Binding DeleteDataInRows}"
                                  CommandParameter="{Binding SelectedForms}"
                                  InputGesture="Ctrl+K"/>
						<MenuItem Header="Выставить номер"
                                  Command="{Binding SetNumberOrder}"
                                  InputGesture="Ctrl+O"/>
						<!--<MenuItem Header="Сортировать по номеру п/п	Ctrl+L"
                                      Command="{Binding SortForms}"
                                      HotKey="Ctrl+L"/> -->
					</ContextMenu>
				</Grid.ContextMenu>
				<Grid Classes="tableHeader" Grid.Row="0"
					  Width="{Binding ElementName=dataGrid.Width}"
					  RowDefinitions="Auto,Auto">

					<interactivity:Interaction.Behaviors>
						<local:ColumnWidthSyncBehavior SourceDataGrid="{Binding ElementName=dataGrid}"/>
					</interactivity:Interaction.Behaviors>

					<!--Первый уровень заголовков-->

					<Border Grid.Column="0" Grid.Row="1">
						<TextBlock>№ п/п</TextBlock>
					</Border>
					<Border Grid.Column="1" Grid.Row="1">
						<TextBlock>Регистрационный номер организации в СГУК РВ в РАО</TextBlock>
					</Border>
					<Border Grid.Column="2" Grid.Row="1">
						<TextBlock>Код ОКПО организации</TextBlock>
					</Border>
					<Border Grid.Column="3" Grid.Row="1">
						<TextBlock>Наименование организации (сокращенное наименование при наличии)</TextBlock>
					</Border>
					<Border Grid.Column="4" Grid.Row="1">
						<TextBlock>Сведения о лицензии (лицензиях) и/или решении о регистрации</TextBlock>
					</Border>
					<Border Grid.Column="5" Grid.Row="1">
						<TextBlock>Количество отчетных форм 1.1-1.4, содержащих сведения об инвентаризации </TextBlock>
					</Border>
					<Border Grid.Column="6" Grid.Row="1">
						<TextBlock>Количество отчетов по формам 1.1-1.4, за исключением форм со сведениями по инвентаризации</TextBlock>
					</Border>
					<Border Grid.Column="7" Grid.Row="1">
						<TextBlock>Количество отчетов по форме 2.12</TextBlock>
					</Border>
					<Border Grid.Column="8" Grid.Row="1">
						<TextBlock>Примечание</TextBlock>
					</Border>
				</Grid>

				<DataGrid
                    Grid.Row="1"
					Classes="table"
					x:CompileBindings="True"
					x:Name="dataGrid"
					Items="{Binding FormList}"
					SelectedItem="{Binding SelectedForm}">

					<DataGrid.Styles>
						<Style Selector="DataGridCell">
							<Setter Property="Background"
									x:DataType="forms4:Form41" 
									Value="{Binding RowColor, Converter={ StaticResource SystemDrawingColorToSolidColorBrush}}"/>
							<Setter Property="ToolTip.Tip" 
									x:DataType="forms4:Form41"
									Value="{Binding ToolTipText}"/> 
						</Style>
						<Style Selector="DataGrid DataGridRow:selected DataGridCell">
							<Setter Property="CornerRadius" Value="5"/>
							<Setter Property="Foreground" Value="Black"/>
							<Setter Property="Background">
								<MultiBinding Converter="{StaticResource ColorBlendConverter}">
									<Binding Source="LightBlue"/>
									<!-- Базовый цвет выделения -->
									<Binding x:DataType="forms4:Form41" Path="RowColor"/>
									<!-- Цвет из условия -->
								</MultiBinding>
							</Setter>
						</Style>

						<Style Selector="DataGrid DataGridRow:pointerover:not(:selected) DataGridCell">
							<Setter Property="Foreground" Value="Black"/>
							<Setter Property="Background">
								<MultiBinding Converter="{StaticResource ColorBlendConverter}">
									<Binding Source="LightGray"/>
									<!-- Базовый цвет наведения -->
									<Binding x:DataType="forms4:Form41" Path="RowColor"/>
									<!-- Цвет из условия -->
								</MultiBinding>
							</Setter>
						</Style>

					</DataGrid.Styles>
					
					<interactivity:Interaction.Behaviors>
						<local:DataGridColumnWidthLoadBehavior FormNum="4.1"/>
						<local:DataGridPointerBehavior/>
						<local:DataGridSelectedItemsBehavior SelectedItems="{Binding SelectedForms, Mode=TwoWay}" />
						<local:DeselectDataGridOnClickOutsideBehavior/>
						<local:DataGridEditingStateBehavior IsEditing="{Binding DataGridIsEditing, Mode=TwoWay}"/>
						<local:DataGridAlternateArrowsKeyBehavior IsEditing="{Binding DataGridIsEditing, Mode=OneWay}"/>
					</interactivity:Interaction.Behaviors>

					<DataGrid.Columns>

						<DataGridTextColumn Binding="{Binding NumberInOrder.Value}"
											Width="40"
											IsReadOnly="True"
											x:DataType="forms4:Form41">
							<DataGridTextColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="1"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTextColumn.HeaderTemplate>
						</DataGridTextColumn>

						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="2"/>

											<!--<controls:FilterPopup
												Grid.Column="1"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"/> -->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding RegNo.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn >
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="3"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding Okpo.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="4"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding OrganizationName.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="5"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding LicenseOrRegistrationInfo.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn >
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="6"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding NumOfFormsWithInventarizationInfo.Value, Mode=TwoWay, Converter={StaticResource IntToEmptyStringConverter}}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn >
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="7"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding NumOfFormsWithoutInventarizationInfo.Value, Mode=TwoWay, Converter={StaticResource IntToEmptyStringConverter}}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn >
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="8"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding NumOfForms212.Value, Mode=TwoWay,  Converter={StaticResource IntToEmptyStringConverter}}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

						<DataGridTemplateColumn>
							<DataGridTemplateColumn.HeaderTemplate>
								<DataTemplate>
									<Border Classes="headerTemplate">
										<Grid ColumnDefinitions="*,Auto">
											<TextBlock Grid.Column="0" Text="9"/>
											<!--<Button Grid.Column="1"/>-->
										</Grid>
									</Border>
								</DataTemplate>
							</DataGridTemplateColumn.HeaderTemplate>

							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate x:DataType="forms4:Form41">
									<TextBox Text="{Binding Note.Value, Mode=TwoWay}"/>
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>

					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</ScrollViewer>

		<Border Grid.Row="2" Classes="pageControlContainer">
			<Grid
				  RowDefinitions="Auto,Auto"
				  ColumnDefinitions="Auto,Auto,Auto,Auto">
				<TextBlock Text="Текущая страница"
					Grid.Row="0" Grid.Column="0" Margin="5"/>

				<controls:NumericLeftRight
					Grid.Row="0" Grid.Column="1" Margin="5"
					Value="{Binding CurrentPage}"
					Minimum="1"/>
				
				<TextBlock Text ="Кол-во страниц:"
					Grid.Row="0" Grid.Column="2" Margin="5"/>
				<TextBlock Text="{Binding TotalPages}"
					Grid.Row="0" Grid.Column="3" Margin="5"/>
				<TextBlock Text="Кол-во строчек на странице"
					Grid.Row="1" Grid.Column="0" Margin="5"/>

				<controls:NumericLeftRight
					Grid.Row="1" Grid.Column="1" Margin="5"
					Value="{Binding RowCount}"
					Minimum="1"/>

				<TextBlock Text="Всего строчек:"
					Grid.Row="1" Grid.Column="2" Margin="5"/>
				<TextBlock Text="{Binding TotalRows}"
					Grid.Row="1" Grid.Column="3" Margin="5"/>
			</Grid>
		</Border>
	</Grid>
</Window>