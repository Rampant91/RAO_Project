<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Client_App.ViewModels.Messages"
        Width="410"
        Height="500"
        MinWidth="410"
        MinHeight="470"
        Title="{Binding CommandName}"
        WindowStartupLocation="CenterScreen"
        x:Class="Client_App.Views.Messages.GetSnkParams"
        x:CompileBindings="True"
        x:DataType="vm:GetSnkParamsVM"
        mc:Ignorable="d">

    <Design.DataContext>
        <vm:GetSnkParamsVM/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*" MinHeight="140" MaxHeight="240"/>
            <RowDefinition Height="3.5*" MinHeight="220" MaxHeight="500"/>
            <RowDefinition Height="0.5*" MinHeight="50" MaxHeight="75"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Margin="5,5,5,0"
                Padding="0,5,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left"
                           Margin="5"
                           Text="Введите дату, на которую будет составлена выгрузка."
                           TextWrapping="Wrap"/>
                <CalendarDatePicker Margin="5, 10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Watermark="дд.мм.гг"
                                    Width="200"
                                    SelectedDate="{Binding Date, Mode=TwoWay}"/>
                <Grid Margin="5,10,5,5" ColumnDefinitions="Auto,100">
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="Регион (00-99):"
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="RegionBox"
                             Grid.Column="1"
                             Text="{Binding Region, Mode=TwoWay}"
                             MaxLength="2"
                             HorizontalAlignment="Left"
                             Width="50"/>
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Margin="5"
                Padding="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left"
                           Margin="5, 5 , 5, 25"
                           Text="Выберите графы, по которым необходимо искать учётную единицу:"
                           Width="400"/>
                <Grid ColumnDefinitions="100,Auto"
                      RowDefinitions="30,30,30,30,30,30"
                      VerticalAlignment="Center">
                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Выбрать все:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Номер паспорта:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Тип:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="3"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Радионуклиды:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="4"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Заводской номер:"/>
                    <TextBlock Grid.Column="0"
                               Grid.Row="5"
                               HorizontalAlignment="Right"
                               Margin="5, 0"
                               VerticalAlignment="Center"
                               Text="Номер упаковки:"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="0"
                              Name="All"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsThreeState="True"
                              Checked ="AllCheckBox_Checked"
                              Unchecked="AllCheckBox_Unchecked"
                              IsChecked="{Binding CheckAll, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="1"
                              Click="AnyCheckBox_Clicked"
                              Name="PasNum"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckPasNum, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="2"
                              Click="AnyCheckBox_Clicked"
                              Name="Type"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckType, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="3"
                              Click="AnyCheckBox_Clicked"
                              Name="Radionuclids"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckRadionuclids, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="4"
                              Click="AnyCheckBox_Clicked"
                              Name="FacNum"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckFacNum, Mode=TwoWay}"/>
                    <CheckBox Grid.Column="1"
                              Grid.Row="5"
                              Click="AnyCheckBox_Clicked"
                              Name="PackNumber"
                              Margin="15, 0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsChecked="{Binding CheckPackNumber, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </Border>
        <WrapPanel Grid.Row="2" 
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   MaxHeight="50">
            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0"
                        IsDefault="True"
                        Margin="0, 0, 10, 0"
                        Name="Ok"
                        Width="80"
                        Height="30"
                        Content="Ок"
                        Click="OkButtonClick"/>
                <Button Grid.Column="1"
                        IsCancel="True"
                        Margin="0, 0, 10, 0"
                        Name="Cancel"
                        Width="80"
                        Height="30"
                        Content="Отмена"
                        Click="CancelButtonClick"/>
            </Grid>
        </WrapPanel>
    </Grid>
</Window>