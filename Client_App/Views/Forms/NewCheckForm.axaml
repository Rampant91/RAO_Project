<Window
    x:Class="Client_App.Views.Forms.NewCheckForm"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels"
    xmlns:behaviors="clr-namespace:Client_App.Behaviors"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    Name="FormCheckerWindow"
    Title="{Binding Path=TitleName, Mode=OneWay}"
    behaviors:WindowScreenSizeBehavior.WidthRatio="0.7"
    behaviors:WindowScreenSizeBehavior.HeightRatio="0.85"
    
    x:DataType="vm:NewCheckFormVM"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:NewCheckFormVM/>
    </Design.DataContext>

    <Grid RowDefinitions="40,*">
        <Grid Row="0">
            <Button
                Width="200"
                Margin="5"
                Content="Сохранить отчёт"
                Command="{Binding Path=ExcelExportCheckForm}"
                CommandParameter="{Binding }"/>
        </Grid>
        <DataGrid
            Grid.Row="1"
            Name="CheckErrorsDataGrid"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            GridLinesVisibility="All"
            IsReadOnly="True"
            SelectionMode="Extended"
            Items="{Binding Path=CheckError, Mode=OneWay}">

            <i:Interaction.Behaviors>
                <behaviors:DataGridSortingBehavior/>
            </i:Interaction.Behaviors>

            <DataGrid.Styles>
                <Style Selector="TextBlock">
                    <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="0.8*"
                    Binding="{Binding Path=Index, Mode=OneWay}"
                    CellStyleClasses="cell_tooltip"
                    FontSize="11"
                    FontWeight="Bold"
                    Header="№ п/п"
                    SortMemberPath="Index">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Width="*"
                    Binding="{Binding Path=Row, Mode=TwoWay}"
                    CellStyleClasses="cell_tooltip"
                    FontSize="11"
                    FontWeight="Bold"
                    Header="стр."
                    SortMemberPath="Row">
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="2.5*"
                    Binding="{Binding Path=Column, Mode=OneWay}"
                    CellStyleClasses="cell_tooltip"
                    FontSize="11"
                    FontWeight="Bold"
                    Header="Графа"
                    SortMemberPath="Column">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Width="3*"
                    Binding="{Binding Path=Value, Mode=OneWay}"
                    CellStyleClasses="cell_tooltip"
                    FontSize="11"
                    FontWeight="Bold"
                    SortMemberPath="Value"
                    Header="Значение"/>
                <DataGridTextColumn
                    Width="10*"
                    Binding="{Binding Path=Message, Mode=OneWay}"
                    CellStyleClasses="cell_tooltip"
                    FontSize="11"
                    SortMemberPath="Message"
                    Header="Сообщение"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>