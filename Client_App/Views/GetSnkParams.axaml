<Window
    x:Class="Client_App.Views.GetSnkParams"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels"
    xmlns:maskedTextBox="clr-namespace:Client_App.Controls.MaskedTextBox"
    Width="410"
    Height="500"
    MinWidth="410"
    MinHeight="500"
    Title="Выбор параметров проверки СНК"
    WindowStartupLocation="CenterScreen"
    x:CompileBindings="True"
    x:DataType="vm:GetSnkParamsVM"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:GetSnkParamsVM/>
    </Design.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="110" MaxHeight="200"/>
            <RowDefinition Height="3.5*" MinHeight="220" MaxHeight="500"/>
            <RowDefinition Height="0.5*" MinHeight="50" MaxHeight="75"/>
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="5,5,5,0"
            Padding="0,5,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Text="Введите дату, на которую необходимо составить СНК.&#x0a;Если оставить поле незаполненным, выгрузка будет составлена на текущую дату."
                    TextWrapping="Wrap"
                    Width="350"/>
                <maskedTextBox:MaskedTextBoxForDate
                    HorizontalAlignment="Left"
                    Mask="99/99/9999"
                    Margin="5, 5, 5, 20"
                    Width="100"
                    Text="{Binding Date, Mode=TwoWay}"/>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Margin="5"
            Padding="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left"
                           Margin="5, 5 , 5, 25"
                           Text="Выберите графы, по которым необходимо искать учётную единицу:"
                           Width="400"/>
                <Grid ColumnDefinitions="150,75"
                      VerticalAlignment="Center">
                    <StackPanel
                        Grid.Column="0"
                        Margin="0, 5, 0, 0">
                        <TextBlock
                            Height="32"
                            Margin="5, 0, 5, 8"
                            Text="Выбрать все"/>
                        <TextBlock
                            Height="32"
                            Margin="5, 8"
                            Text="Номер паспорта"/>
                        <TextBlock
                            Height="32"
                            Margin="5, 8"
                            Text="Тип"/>
                        <TextBlock
                            Height="32"
                            Margin="5, 8"
                            Text="Радионуклиды"/>
                        <TextBlock
                            Height="32"
                            Margin="5, 8"
                            Text="Заводской номер"/>
                        <TextBlock
                            Height="32"
                            Margin="5, 8"
                            Text="Номер упаковки"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Margin="5, 0">
                        <CheckBox
                            Name="All"
                            Margin="5, 8, 5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Checked ="checkBox_Checked"
                            Unchecked="checkBox_Unchecked"
                            IsChecked="True"/>
                        <CheckBox
                            Name="PasNum"
                            Margin="5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CheckPasNum, Mode=TwoWay}"/>
                        <CheckBox
                            Name="Type"
                            Margin="5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CheckType, Mode=TwoWay}"/>
                        <CheckBox
                            Name="Radionuclids"
                            Margin="5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CheckRadionuclids, Mode=TwoWay}"/>
                        <CheckBox
                            Name="FacNum"
                            Margin="5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CheckFacNum, Mode=TwoWay}"/>
                        <CheckBox
                            Name="PackNumber"
                            Margin="5, 15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CheckPackNumber, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        <WrapPanel 
            Grid.Row="2" 
            HorizontalAlignment="Center"
            Margin="0,5"
            MaxHeight="50">
            <Grid ColumnDefinitions="*,*">
                <Button
                    Grid.Column="0"
                    Margin="0, 0, 10, 0"
                    Name="Ok"
                    Width="80"
                    Height="30"
                    Content="Ок"
                    Click="OkButtonClick"/>
                <Button
                    Grid.Column="1"
                    Margin="0, 0, 10, 0"
                    Name="Cancel"
                    Width="80"
                    Height="30"
                    Content="Отмена"/>
            </Grid>
        </WrapPanel>
    </Grid>
</Window>