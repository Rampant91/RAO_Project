<Window
    x:Class="Client_App.Form_12"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Forms.Forms1"
    xmlns:converter="clr-namespace:Client_App.VisualRealization.Converters"
	xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
	xmlns:local="using:Client_App.Behaviors"
	xmlns:interactivity="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
	xmlns:behaviors="using:Avalonia.Xaml.Interactions.Core"
    Title="Form_12"
    d:DesignHeight="450"
    d:DesignWidth="900"
    x:DataType="vm:Form_12VM"
    mc:Ignorable="d"
	x:Name="mainWindow"
	MinWidth="800" MinHeight="600">

    <Window.Resources>
		<converter:DataGridLengthToGridLengthConverter x:Key="LengthConverter"/>
		<converter:NullToStringConverter x:Key="NullToStringConverter"/>
		<converter:DateConverter x:Key="DateConverter"/>
		<SolidColorBrush x:Key="PrimaryColor" Color="#5685c0"/> 
    </Window.Resources>

	<Window.Styles>
		<Style Selector="TextBlock.Title1">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
        <Style Selector="TextBlock.Title2">
            <Setter Property="Margin" Value="1"/>
			<Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Left"/>
		    <Setter Property="TextTrimming" Value="WordEllipsis"/>
        </Style>
		<Style Selector="TextBlock.Title3">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextAlignment" Value="Center"/>
		    <Setter Property="TextTrimming" Value="None"/>
        </Style>
		<Style Selector="DataGridRow:selected CalendarDatePicker TextBox">
			<Setter Property="Foreground" Value="Black"/>
		</Style>
	</Window.Styles>

    <Design.DataContext>
        <vm:Form_12VM/>
    </Design.DataContext>
	
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="*" MinHeight="175"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>
			
			<CheckBox Grid.Row ="0" Height="30" Margin="5" IsChecked ="{Binding IsHeaderExpanded}">Раскрыть/Скрыть верхнюю панель</CheckBox>
			
			<WrapPanel
				Grid.Row ="1"
				Orientation ="Horizontal"
				IsVisible="{Binding IsHeaderExpanded}">
					
				<Border Margin="5" BorderBrush ="Black" BorderThickness ="1" CornerRadius ="5">
					<Grid Margin="5" RowDefinitions ="*,*,*,*,*">
						<Grid ColumnDefinitions="*,*"  Grid.Row="0">
							<TextBlock Grid.Column="0" Margin="5" >Дата окончания предыдущего отчетного периода:</TextBlock>
							<CalendarDatePicker Grid.Column="1" 
                                SelectedDate="{Binding CurrentReport.StartPeriod.Value, Converter={StaticResource DateConverter}}"/>
						</Grid>

						<Grid ColumnDefinitions="*,*"  Grid.Row="1">
							<TextBlock Grid.Column="0" Margin="5" >Дата окончания настоящего отчетного периода:</TextBlock>
							<CalendarDatePicker Grid.Column="1" 
                                SelectedDate="{Binding CurrentReport.EndPeriod.Value, Converter={StaticResource DateConverter}}"/>
						</Grid>

						<StackPanel  Orientation="Horizontal" Grid.Row="2">
							<TextBlock Margin="5">Номер корректировки:</TextBlock>
							<TextBox Margin="5" Width="75"  IsReadOnly="True"
                                Text="{Binding Path=CurrentReport.CorrectionNumber.Value}"></TextBox>
						</StackPanel>
						
						<StackPanel Orientation="Horizontal" Grid.Row="3">
							<Button Margin="5" Command="{Binding CheckForm}">Проверить</Button>
							<Button Margin="5" >Сохранить</Button>
						</StackPanel>

						<StackPanel Orientation="Horizontal"  Grid.Row="4">
							<TextBlock Margin="5" >Автозаполнение:</TextBlock>
							<CheckBox Margin="5" IsChecked="{Binding IsAutoReplaceEnabled}"></CheckBox>
						</StackPanel>
					</Grid>
				</Border>

				<Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
					<Grid Margin="5" RowDefinitions ="*,*,*,*,*" ColumnDefinitions="*,2*">
						<TextBlock Grid.Row="0" Grid.Column="0" Margin="5" >ФИО исполнителя:</TextBlock>
						<TextBox Grid.Row="0" Grid.Column="1" Margin="5"  IsReadOnly="True"
                                Text="{Binding Path=CurrentReport.FIOexecutor.Value}"></TextBox>
						<TextBlock Grid.Row="1" Grid.Column="0" Margin="5" >Должность:</TextBlock>
						<TextBox Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True"
                                Text="{Binding Path=CurrentReport.GradeExecutor.Value}" ></TextBox>
						<TextBlock Grid.Row="2" Grid.Column="0" Margin="5" >Телефон:</TextBlock>
						<TextBox Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True"
                                Text="{Binding Path=CurrentReport.ExecPhone.Value}"></TextBox>
						<TextBlock Grid.Row="3" Grid.Column="0" Margin="5" >Электронная почта:</TextBlock>
						<TextBox Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True"
                                Text="{Binding Path=CurrentReport.ExecEmail.Value}"></TextBox>
						<Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Click="CopyExecutorData_Click">Скопировать данные предыдущей формы</Button>
					</Grid>
				</Border>
				<Button Height="30" Margin="5" Command="{Binding SourceTransmissionAll}"> Перевести все РВ в РАО</Button>
				
				
			</WrapPanel>
			

			<ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
				<Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto">
					<Grid.ContextMenu>
						<ContextMenu>
							<MenuItem Header="Выделить всё				Ctrl+A"
									  Command="{Binding SelectAll}"
									  HotKey="Ctrl+A"/>
							<MenuItem Header="Добавить строку			Ctrl+T"
									  Command="{Binding AddRow}"
									  HotKey="Ctrl+T"/>
							<MenuItem Header="Добавить N строк			Ctrl+N"
									  Command="{Binding AddRows}"
									  HotKey="Ctrl+N"/>
							<MenuItem Header="Добавить N строк перед	Ctrl+I" 
									  Command="{Binding AddRowsIn}"
									  CommandParameter="{Binding SelectedForms}"
									  HotKey="Ctrl+I"/>
							<MenuItem Header="Копировать				Ctrl+C"
									  Command="{Binding CopyRows}"
									  CommandParameter="{Binding SelectedForms}"
									  HotKey="Ctrl+C"/>
							<MenuItem Header="Вставить					Ctrl+V"
									  Command="{Binding PasteRows}"
									  HotKey="Ctrl+V"/>
							<MenuItem Header="Удалить выбранные строчки	Ctrl+D"
									  Command="{Binding DeleteRows}"
									  CommandParameter="{Binding SelectedForms}"
									  HotKey="Ctrl+D"/>
							<MenuItem Header="Выставить номер			Ctrl+O"
									  Command="{Binding SetNumberOrder}"
									  HotKey="Ctrl+O"/>
							<MenuItem Header="Сортировать по номеру п/п	Ctrl+L"
									  Command="{Binding SortForms}"
									  HotKey="Ctrl+L"/>
						</ContextMenu>
					</Grid.ContextMenu>
					<Grid Grid.Row="0" 
						Margin="5"
						  Width="{Binding ElementName=dataGrid.Width}">
						<interactivity:Interaction.Behaviors>
							<local:ColumnWidthSyncBehavior	SourceDataGrid="{Binding ElementName=dataGrid}"/>
						</interactivity:Interaction.Behaviors>
						<Border Grid.Column="0" Grid.ColumnSpan="1"
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow"></TextBlock>
						</Border>
						<Border Grid.Column="1" Grid.ColumnSpan="2"
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Сведения об операции</TextBlock>
						</Border>
						<Border Grid.Column="3" Grid.ColumnSpan="7"
							BorderThickness="1" BorderBrush="Black"
							Margin="-1,0,0,0">
							<TextBlock  TextAlignment="Center" TextWrapping="WrapWithOverflow">Сведения из паспорта на изделие из обездненного урана</TextBlock>
						</Border>
						<Border Grid.Column="10" Grid.ColumnSpan="2"
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Право собственности на ИОУ</TextBlock>
						</Border>
						<Border Grid.Column="12" Grid.ColumnSpan="3"
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Документ</TextBlock>
						</Border>
						<Border Grid.Column="15" Grid.ColumnSpan="2"
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Код ОКПО</TextBlock>
						</Border>
						<Border Grid.Column="17" Grid.ColumnSpan="3" 
								BorderThickness="1" BorderBrush="Black"
								Margin="-1,0,0,0">
							<TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow">Прибор (установка), УКТ или иная упаковка</TextBlock>
						</Border>
					</Grid>
					<DataGrid Grid.Row="1"
						x:Name="dataGrid"
						Items="{Binding FormList}"
						CanUserResizeColumns="True"
						RowBackground="White"
						AlternatingRowBackground="LightBlue"
						Margin="5,0,5,5"
						SelectedItem="{Binding SelectedForm}"
						SelectionMode="Extended"
						GridLinesVisibility="Vertical"
						CanUserSortColumns="False"
						IsReadOnly="False"
						>
						<interactivity:Interaction.Behaviors>
							<local:DataGridSelectedItemsBehavior
								SelectedItems="{Binding SelectedForms, Mode=TwoWay}" />
						</interactivity:Interaction.Behaviors>
						<DataGrid.Columns>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="№ п/п"
												Binding="{Binding NumberInOrder.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="код"
												Binding="{Binding OperationCode.Value, Mode=TwoWay}"/>
							<DataGridTemplateColumn Header="дата" Width="Auto"
												MinWidth="60">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CalendarDatePicker
											SelectedDate="{Binding OperationDate.Value, Mode=TwoWay, Converter={StaticResource DateConverter}}"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Center"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="номер паспорта"
												Binding="{Binding PassportNumber.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="наименование"
												Binding="{Binding NameIOU.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="номер"
												Binding="{Binding FactoryNumber.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="масса обедненного урана, кг"
												Binding="{Binding Mass.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="код ОКПО изготовителя"
												Binding="{Binding CreatorOKPO.Value, Mode=TwoWay}"/>
							<DataGridTemplateColumn Header="дата выпуска" Width="Auto"
												MinWidth="60">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CalendarDatePicker
											SelectedDate="{Binding CreationDate.Value, Mode=TwoWay, Converter={StaticResource DateConverter}}"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Center"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="НСС, мес"
												Binding="{Binding SignedServicePeriod.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="код формы собственности"
												Binding="{Binding PropertyCode.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="код ОКПО правообладателя"
												Binding="{Binding Owner.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="вид"
												Binding="{Binding DocumentVid.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="номер"
												Binding="{Binding DocumentNumber.Value, Mode=TwoWay}"/>
							<DataGridTemplateColumn Header="дата" Width="Auto"
												MinWidth="60">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<CalendarDatePicker
											SelectedDate="{Binding DocumentDate.Value, Mode=TwoWay}"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Center"/>
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="поставщика или получателя"
												Binding="{Binding ProviderOrRecieverOKPO.Value, Mode=TwoWay, Converter={StaticResource DateConverter}}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="перевозчика"
												Binding="{Binding TransporterOKPO.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="наименование"
												Binding="{Binding PackName.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="тип"
												Binding="{Binding PackType.Value, Mode=TwoWay}"/>
							<DataGridTextColumn Width="Auto"
												MinWidth="60"
												Header="номер"
												Binding="{Binding PackNumber.Value, Mode=TwoWay}"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</ScrollViewer>
			<Grid	Grid.Row="3" Background="{StaticResource PrimaryColor}" Margin="5"
				RowDefinitions="Auto,Auto"
				ColumnDefinitions="Auto,Auto,Auto,Auto">
				<TextBlock Text="Текущая страница"
					Grid.Row="0" Grid.Column="0" Margin="5"/>
				<NumericUpDown Value="{Binding CurrentPage}" Minimum="1" 
					Grid.Row="0" Grid.Column="1" Margin="5"
					TextInput="TextBox_TextInput" 
					KeyDown="TextBox_PreviewKeyDown"/>
				<TextBlock Text ="Кол-во страниц:"
					Grid.Row="0" Grid.Column="2" Margin="5"/>
				<TextBlock Text="{Binding TotalPages}"
					Grid.Row="0" Grid.Column="3" Margin="5"/>
				<TextBlock Text="Кол-во строчек на странице"
					Grid.Row="1" Grid.Column="0" Margin="5"/>
				<NumericUpDown Value="{Binding RowCount}" Minimum="1" 
					Grid.Row="1" Grid.Column="1" Margin="5"
					TextInput="TextBox_TextInput" 
					KeyDown="TextBox_PreviewKeyDown"/>
				
				<TextBlock Text="Всего строчек:"
					Grid.Row="1" Grid.Column="2" Margin="5"/>
				<TextBlock Text="{Binding TotalRows}"
					Grid.Row="1" Grid.Column="3" Margin="5"/>
				
			</Grid>
					
				
			<StackPanel Grid.Row="4" HorizontalAlignment="Left" Background="{StaticResource PrimaryColor}" Margin="5">
				<TextBlock Margin="5">Примечания</TextBlock>
				<DataGrid 
					Width="512"
					MaxHeight="175"
					Items="{Binding NoteList}"
					CanUserResizeColumns="True"
					RowBackground="White"
					AlternatingRowBackground="LightBlue"
					Margin="5">
					<DataGrid.Columns>
						<DataGridTextColumn Header="№ строки"
											Binding="{Binding RowNumber.Value, Converter={StaticResource NullToStringConverter}}"/>
						<DataGridTextColumn Header="№ графы"
											Binding="{Binding GraphNumber.Value, Converter={StaticResource NullToStringConverter}}"/>
						<DataGridTextColumn Header="Пояснения"
											Binding="{Binding Comment.Value, Converter={StaticResource NullToStringConverter}}"/>
					</DataGrid.Columns>
				</DataGrid>
			</StackPanel>
		
		</Grid>
</Window>
