<Window
    x:Class="Client_App.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Client_App.ViewModels"
    xmlns:converterType="clr-namespace:Client_App.Resources.ConverterType"
	xmlns:local="using:Client_App.Behaviors"
	xmlns:interactivity="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
	xmlns:models="clr-namespace:Models.Collections;assembly=Models"
    Title="{Binding Current_Db, Mode=OneWay}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Width="{Binding Source={x:Type converterType:Width}, Converter={StaticResource RatioConverter}, ConverterParameter='0.75', FallbackValue='600', Mode=OneWay}"
    Height="{Binding Source={x:Type converterType:Height}, Converter={StaticResource RatioConverter}, ConverterParameter='0.8', FallbackValue='800', Mode=OneWay}"
    MinWidth="200"
    MinHeight="200"
    x:CompileBindings="True"
    x:DataType="vm:MainWindowVM"
    x:Name="MainWindow"
    Background="#ffffff"
    Icon="/Assets/logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowVM/>
    </Design.DataContext>
    
    <DockPanel>
        <Menu 
            x:Name="SubMenuBorder" 
            BorderBrush="#FF959595" 
            BorderThickness="1" 
            Background="WhiteSmoke"
            Height="25"
            DockPanel.Dock="Top">
            <Menu.Styles>
                <Style Selector="Separator">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Margin" Value="0,5"/>
                    <Setter Property="Height" Value="3"/>
                </Style>
                <Style Selector="MenuItem">
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </Menu.Styles>

            <MenuItem 
                Name="ImportMenu"
                Header="_Импорт">
                <MenuItem 
                    Command="{Binding ImportRaodb}" 
                    Header="Из RAODB"/>
                <MenuItem 
                    Command="{Binding ImportExcel}" 
                    Header="Из Excel"/>
                <MenuItem 
                    Command="{Binding ImportJson}" 
                    Header="Из Json"/>
            </MenuItem>

            <MenuItem 
                Name="ExcelMenu"
                Header="_Excel">
                <MenuItem Header="Список организаций">
                    <MenuItem 
                        Command="{Binding ExcelExportListOfOrgs}" 
                        Header="Количество форм"/>
                    <MenuItem 
                        Command="{Binding ExcelExportListOfOrgs}"
                        CommandParameter="full"
                        Header="Список с доп. полями"/>
                </MenuItem>
                <MenuItem
                    Command="{Binding ExcelExportExecutors}"
                    CommandParameter="Executors"
                    Header="Список исполнителей"/>
                <MenuItem 
                    Command="{Binding ExcelExportListOfForms1}" 
                    Header="Список форм 1"/>
                <MenuItem 
                    Command="{Binding ExcelExportListOfForms2}" 
                    Header="Список форм 2"/>
                <Separator/>
                <MenuItem
                    Command="{Binding ExcelExportAll}"
                    CommandParameter="AllReps"
                    Header="Все формы" />
                <MenuItem Header="Формы 1">
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.1"
                        Header="Форма 1.1"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.2"
                        Header="Форма 1.2"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.3"
                        Header="Форма 1.3"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.4"
                        Header="Форма 1.4"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.5"
                        Header="Форма 1.5"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.6"
                        Header="Форма 1.6"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.7"
                        Header="Форма 1.7"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.8"
                        Header="Форма 1.8"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="1.9"
                        Header="Форма 1.9"/>
                </MenuItem>
                <MenuItem Header="Формы 2">
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.1"
                        Header="Форма 2.1"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.2"
                        Header="Форма 2.2"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.3"
                        Header="Форма 2.3"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.4"
                        Header="Форма 2.4"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.5"
                        Header="Форма 2.5"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.6"
                        Header="Форма 2.6"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.7"
                        Header="Форма 2.7"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.8"
                        Header="Форма 2.8"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.9"
                        Header="Форма 2.9"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.10"
                        Header="Форма 2.10"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.11"
                        Header="Форма 2.11"/>
                    <MenuItem
                        Command="{Binding ExcelExportForms}"
                        CommandParameter="2.12"
                        Header="Форма 2.12"/>
                </MenuItem>
                <MenuItem Header="Выбранная организация">
                    <MenuItem
                        Command="{Binding ExcelExportAll}"
                        CommandParameter="SelectedOrg"
                        Header="Все формы"/>
                    <MenuItem Header="Формы 1">
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.1"
                            Header="Форма 1.1"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.2"
                            Header="Форма 1.2"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.3"
                            Header="Форма 1.3"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.4"
                            Header="Форма 1.4"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.5"
                            Header="Форма 1.5"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.6"
                            Header="Форма 1.6"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.7"
                            Header="Форма 1.7"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.8"
                            Header="Форма 1.8"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org1.9"
                            Header="Форма 1.9"/>
                    </MenuItem>
                    <MenuItem Header="Формы 2">
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.1"
                            Header="Форма 2.1"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.2"
                            Header="Форма 2.2"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.3"
                            Header="Форма 2.3"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.4"
                            Header="Форма 2.4"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.5"
                            Header="Форма 2.5"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.6"
                            Header="Форма 2.6"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.7"
                            Header="Форма 2.7"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.8"
                            Header="Форма 2.8"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.9"
                            Header="Форма 2.9"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.10"
                            Header="Форма 2.10"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.11"
                            Header="Форма 2.11"/>
                        <MenuItem
                            Command="{Binding ExcelExportForms}"
                            CommandParameter="Org2.12"
                            Header="Форма 2.12"/>
                    </MenuItem>
                    <MenuItem Header="СНК на дату">
                        <MenuItem
                            Command="{Binding  ExcelExportSnk}"
                            CommandParameter="1.1"
                            Header="Форма 1.1"/>
                        <MenuItem 
                            Command="{Binding  ExcelExportSnk}"
                            CommandParameter="1.3"
                            Header="Форма 1.3"/>
                    </MenuItem>
                    <MenuItem Header="Проверка инвентаризации">
                        <MenuItem
                            Command="{Binding  ExcelExportCheckInventories}"
                            CommandParameter="1.1"
                            Header="Форма 1.1"/>
                        <MenuItem 
                            Command="{Binding  ExcelExportCheckInventories}"
                            CommandParameter="1.3"
                            Header="Форма 1.3"/>
                            </MenuItem>
                </MenuItem>
                <Separator/>
                <MenuItem
                    Command="{Binding ExcelExportIntersections}"
                    Header="Разрывы и пересечения"/>
                <MenuItem Header="Паспорта">
                    <MenuItem
                        Command="{Binding ExcelExportRepWithoutPas}"
                        Header="Отчеты без паспортов"/>
                    <MenuItem
                        Command="{Binding ExcelExportPasWithoutRep}"
                        Header="Паспорта без отчетов"/>
                    <MenuItem
                        Command="{Binding ChangePasFolder}"
                        Header="Изменить расположение паспортов по умолчанию"/>
                </MenuItem>
                <MenuItem
                    Command="{Binding  ExcelExportCheckLastInventoryDate}"
                    Header="Проверка последней инвентаризации"/>
                <!--
                <MenuItem Command="{Binding MaxGraphsLength, Mode=OneTime}"
                          Header="Максимальная длинна граф"/>
                <MenuItem Command="{Binding UnaccountedRad, Mode=OneTime}"
                          Header="Радионуклиды отсутствующие в справочнике"/> 
                -->
            </MenuItem>

            <MenuItem 
                Name="ServiceMenu"
                Header="Сервис">
                <MenuItem
                    Command="{Binding OpenCalculator}"
                    CommandParameter="activity"
                    Header="Пересчёт активности"/>
                <MenuItem 
                    Command="{Binding OpenCalculator}" 
                    CommandParameter="category" 
                    Header="Расчёт категории"/>
                <Separator/>
                <MenuItem
                    Command="{Binding OpenFile}" 
                    CommandParameter="manual" 
                    Header="Инструкция пользователя"/>
                <MenuItem
                    Command="{Binding OpenFolder}"
                    CommandParameter="rao"
                    Header="Папка RAO"/>
                <MenuItem
                    Command="{Binding OpenFolder}"
                    CommandParameter="app"
                    Header="Папка с программой"/>
                <MenuItem 
                    Command="{Binding OpenFile}" 
                    CommandParameter="radsDictionary" 
                    Header="Справочник радионуклидов"/>
                <MenuItem 
                    Command="{Binding OpenFolder}"
                    CommandParameter="excel"
                    Header="Шаблоны форм"/>
                <Separator/>
                <MenuItem
                    Click="OpenContactsButtonClicked"
                    Header="Контакты"/>
                <MenuItem
                    Command="{Binding OpenFile}"
                    CommandParameter="changelog"
                    Header="Список изменений"/>
                    
            </MenuItem> 

        </Menu>
        
        <Panel 
            x:Name="MainPanel"
            Margin="5,5,5,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <TabControl SelectedIndex ="{Binding SelectedReportType}">
				<!--Пустой элемент для начала отсчета индекса с 1 -->
				<TabItem IsVisible="False"/>
                <TabItem 
                    x:Name="Forms1" 
                    Header="Формы 1">
                    <Panel 
                        x:Name="Forms_p1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <ScrollViewer>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="200"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2.7*" MaxWidth="460"/>
                                    </Grid.ColumnDefinitions>
                                    <ScrollViewer Grid.Column="0">
                                        <Panel x:Name="Forms_p1_0" HorizontalAlignment="Stretch"/>
                                    </ScrollViewer>
                                    <Panel 
                                        x:Name="Forms_p1_B"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"/>
                                </Grid>
                                <Panel 
                                    x:Name="Forms_p1_X"
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>
                            </Grid>
                        </ScrollViewer>
                    </Panel>
                </TabItem>
                <TabItem x:Name="Forms2" Header="Формы 2">
                    <Panel x:Name="Forms_p2" 
                           VerticalAlignment="Stretch">
                        <ScrollViewer>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="220"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2.2*" MaxWidth="625"/>
                                    </Grid.ColumnDefinitions>
                                    <ScrollViewer Grid.Column="0">
                                        <Panel x:Name="Forms_p2_0"/>
                                    </ScrollViewer>
                                    <Panel x:Name="Forms_p2_B" Grid.Column="1"/>
                                </Grid>
                                <Panel
                                    x:Name="Forms_p2_X"
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Stretch"/>
                            </Grid>
                        </ScrollViewer>
                    </Panel>
                </TabItem>
				<TabItem x:Name="Forms3" Header="Формы 3" IsVisible="False"/>
				<!--Формы 4-->
				<TabItem x:Name="Forms4" Header="Формы 4">
					<Border Classes="borderContainer">
						<Grid RowDefinitions="*,*" ColumnDefinitions="5*,3*" >
							<Grid Grid.Row ="0" Grid.Column="0" RowDefinitions="Auto,*,Auto">
								<TextBox Grid.Row="0" Margin="5" Watermark ="Поиск..." />
								<!--Ошибка в этом DataGrid-->
								<DataGrid 
									      Grid.Row="1" Margin="5"
					                      x:CompileBindings="True"
									      Items="{Binding Reports40}"
										  SelectionMode="Single"
										  SelectedItem="{Binding SelectedReports}"
										  RowHeight="25"
										  GridLinesVisibility="All">
										
							        <DataGrid.ContextMenu>
										<ContextMenu>
											<MenuItem Header="Добавить форму"
													  Command="{Binding AddReports}"/>
											<MenuItem Header="Редактировать форму"
													  Command="{Binding NewChangeReports}"/>
											<MenuItem Header="Удалить форму"
													  Command="{Binding DeleteReports}"
													  CommandParameter="{Binding SelectedReports}"/>
										</ContextMenu>
									</DataGrid.ContextMenu>
										
									<DataGrid.Columns>
										<DataGridTextColumn
											x:DataType="models:Reports"
											Width="60"
											IsReadOnly="True"
											Binding="{Binding Master.Rows40[0].SubjectRF.Value}">
											<DataGridTextColumn.HeaderTemplate>
												<DataTemplate>
													<Border Classes="headerTemplate">
														<Grid ColumnDefinitions="*,Auto" Margin="3">
															<TextBlock Grid.Column="0" Text="Код субъекта РФ"/>
															<!--<Button Grid.Column="1"/>-->
														</Grid>
													</Border>
												</DataTemplate>
											</DataGridTextColumn.HeaderTemplate>
										</DataGridTextColumn>
										
										<DataGridTextColumn 
											x:DataType="models:Reports"
											Width="Auto"
											IsReadOnly="True"
											Binding="{Binding Master.Rows40[0].SubjectRF.Value}">
											<DataGridTextColumn.HeaderTemplate>
												<DataTemplate>
													<Border Classes="headerTemplate">
														<Grid ColumnDefinitions="*,Auto" Margin="3">
															<TextBlock Grid.Column="0" Text="Субъект РФ"/>
															<!--<Button Grid.Column="1"/>-->
														</Grid>
													</Border>
												</DataTemplate>
											</DataGridTextColumn.HeaderTemplate>
										</DataGridTextColumn>

										<DataGridTextColumn
											x:DataType="models:Reports"
											Width="*"
											IsReadOnly="True"
											Binding="{Binding Master.Rows40[0].ShortNameRiac.Value}">
											<DataGridTextColumn.HeaderTemplate>
												<DataTemplate>
													<Border Classes="headerTemplate">
														<Grid ColumnDefinitions="*,Auto" Margin="3">
															<TextBlock Grid.Column="0" Text="Сокращенное наименование РИАЦ"/>
															<!--<Button Grid.Column="1"/>-->
														</Grid>
													</Border>
												</DataTemplate>
											</DataGridTextColumn.HeaderTemplate>
										</DataGridTextColumn>

								    </DataGrid.Columns>
								</DataGrid>
								<Border Grid.Row="2" Classes="pageControlContainer">
									<Grid
										  RowDefinitions="Auto,Auto"
										  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
										<TextBlock Text="Текущая страница"
											Grid.Row="0" Grid.Column="0" Margin="5"/>
										<NumericUpDown Increment="-1"
											Grid.Row="0" Grid.Column="1" Margin="5">
											<interactivity:Interaction.Behaviors>
												<local:NumericUpDownDigitValidationBehavior/>
											</interactivity:Interaction.Behaviors>
										</NumericUpDown>
										<TextBlock Text ="Кол-во страниц:"
											Grid.Row="0" Grid.Column="2" Margin="5"/>
										<TextBlock 
											Grid.Row="0" Grid.Column="3" Margin="5"/>
										<TextBlock Text="Кол-во строчек на странице"
											Grid.Row="1" Grid.Column="0" Margin="5"/>
										<NumericUpDown  Minimum="1"
											Grid.Row="1" Grid.Column="1" Margin="5">
											<interactivity:Interaction.Behaviors>
												<local:NumericUpDownDigitValidationBehavior/>
											</interactivity:Interaction.Behaviors>
										</NumericUpDown>
										<TextBlock Text="Кол-во строчек:"
											Grid.Row="1" Grid.Column="2" Margin="5"/>
										<TextBlock
											Grid.Row="1" Grid.Column="3" Margin="5"/>

										<TextBlock Text="Кол-во отчетов:"
											Grid.Row="1" Grid.Column="4" Margin="5"/>
										<TextBlock 
											Grid.Row="1" Grid.Column="5" Margin="5"/>
									</Grid>
								</Border>
							</Grid>
							<StackPanel Grid.Row ="0" Grid.Column="1" Margin="5">
							    <Button Command="{Binding NewAddForm}"
										CommandParameter="4.1"
										Content="Форма 4.1"></Button>
							</StackPanel>
							<Grid Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan="2" RowDefinitions="*,Auto" >
								<DataGrid Grid.Row="0" Margin="5"
										  Items="{Binding ReportList}"
										  SelectedItem="{Binding SelectedReport}"
										  RowHeight="25"
										  GridLinesVisibility="All">
									<DataGrid.ContextMenu>
										<ContextMenu>
											<MenuItem Header="Редактировать форму"
													  Command="{Binding NewChangeForm}"
													  CommandParameter="{Binding SelectedReport}"/>
											<MenuItem Header="Удалить форму"
													  Command="{Binding NewDeleteForm}"
													  CommandParameter="{Binding SelectedReport}"/>
										</ContextMenu>
									</DataGrid.ContextMenu>

									<DataGrid.Columns>
										<DataGridTextColumn
											    x:DataType="models:Report"
											    Width="*"
											    IsReadOnly="True"
												Binding="{Binding FormNum.Value}">
										    <DataGridTextColumn.HeaderTemplate>
											    <DataTemplate>
												    <Border Classes="headerTemplate">
													    <Grid ColumnDefinitions="*,Auto" Margin="3">
														    <TextBlock Grid.Column="0" Text="Форма"/>
														    <!--<Button Grid.Column="1"/>-->
													    </Grid>
												    </Border>
											    </DataTemplate>
										    </DataGridTextColumn.HeaderTemplate>
									    </DataGridTextColumn>
										<DataGridTextColumn
											    x:DataType="models:Report"
											    Width="*"
											    IsReadOnly="True"
												Binding="{Binding Year.Value}">
										    <DataGridTextColumn.HeaderTemplate>
											    <DataTemplate>
												    <Border Classes="headerTemplate">
													    <Grid ColumnDefinitions="*,Auto" Margin="3">
														    <TextBlock Grid.Column="0" Text="Год"/>
														    <!--<Button Grid.Column="1"/>-->
													    </Grid>
												    </Border>
											    </DataTemplate>
										    </DataGridTextColumn.HeaderTemplate>
									    </DataGridTextColumn>
										<DataGridTextColumn
											    x:DataType="models:Report"
											    Width="2*"
											    IsReadOnly="True"
												Binding="{Binding ExportDate.Value}">
										    <DataGridTextColumn.HeaderTemplate>
											    <DataTemplate>
												    <Border Classes="headerTemplate">
													    <Grid ColumnDefinitions="*,Auto" Margin="3">
														    <TextBlock Grid.Column="0" Text="Дата выгрузки"/>
														    <!--<Button Grid.Column="1"/>-->
													    </Grid>
												    </Border>
											    </DataTemplate>
										    </DataGridTextColumn.HeaderTemplate>
									    </DataGridTextColumn>
										<DataGridTextColumn
											    x:DataType="models:Report"
											    Width="2*"
											    IsReadOnly="True"
												Binding="{Binding CorrectionNumber.Value}">
										    <DataGridTextColumn.HeaderTemplate>
											    <DataTemplate>
												    <Border Classes="headerTemplate">
													    <Grid ColumnDefinitions="*,Auto" Margin="3">
														    <TextBlock Grid.Column="0" Text="Номер корректировки"/>
														    <!--<Button Grid.Column="1"/>-->
													    </Grid>
												    </Border>
											    </DataTemplate>
										    </DataGridTextColumn.HeaderTemplate>
									    </DataGridTextColumn>
										<DataGridTextColumn
											    x:DataType="models:Report"
											    Width="4*"
											    IsReadOnly="False"
												Binding="{Binding Comments.Value}">
										    <DataGridTextColumn.HeaderTemplate>
											    <DataTemplate>
												    <Border Classes="headerTemplate">
													    <Grid ColumnDefinitions="*,Auto" Margin="3">
														    <TextBlock Grid.Column="0" Text="Комментарий"/>
														    <!--<Button Grid.Column="1"/>-->
													    </Grid>
												    </Border>
											    </DataTemplate>
										    </DataGridTextColumn.HeaderTemplate>
									    </DataGridTextColumn>
									</DataGrid.Columns>
								</DataGrid>
								<Border Grid.Row="1" Classes="pageControlContainer">
									<Grid
										  RowDefinitions="Auto,Auto"
										  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
										<TextBlock Text="Текущая страница"
											Grid.Row="0" Grid.Column="0" Margin="5"/>
										<NumericUpDown  Increment="-1"
											Grid.Row="0" Grid.Column="1" Margin="5">
											<interactivity:Interaction.Behaviors>
												<local:NumericUpDownDigitValidationBehavior/>
											</interactivity:Interaction.Behaviors>
										</NumericUpDown>
										<TextBlock Text ="Кол-во страниц:"
											Grid.Row="0" Grid.Column="2" Margin="5"/>
										<TextBlock 
											Grid.Row="0" Grid.Column="3" Margin="5"/>
										<TextBlock Text="Кол-во строчек на странице"
											Grid.Row="1" Grid.Column="0" Margin="5"/>
										<NumericUpDown Minimum="1"
											Grid.Row="1" Grid.Column="1" Margin="5">
											<interactivity:Interaction.Behaviors>
												<local:NumericUpDownDigitValidationBehavior/>
											</interactivity:Interaction.Behaviors>
										</NumericUpDown>
										<TextBlock Text="Кол-во строчек:"
											Grid.Row="1" Grid.Column="2" Margin="5"/>
										<TextBlock
											Grid.Row="1" Grid.Column="3" Margin="5"/>

										<TextBlock Text="Кол-во отчетов:"
											Grid.Row="1" Grid.Column="4" Margin="5"/>
										<TextBlock
											Grid.Row="1" Grid.Column="5" Margin="5"/>
									</Grid>
								</Border>
							</Grid>
						</Grid>
					</Border>
				</TabItem>
            </TabControl>
        </Panel>

    </DockPanel>
</Window>