				<TextBlock Margin="5"
					Text="Код &quot;Статус РАО&quot; -"/>
				
				<TextBox Width="50" Margin="5"/>
			</StackPanel>
			
			<TextBox Grid.Row="0" Grid.Column="1" Margin="5" 
