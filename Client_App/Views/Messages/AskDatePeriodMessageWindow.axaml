<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Client_App.ViewModels.Messages"
    xmlns:converterType="clr-namespace:Client_App.Resources.ConverterType"
    mc:Ignorable="d"
    Width="{CompiledBinding Source={x:Type converterType:Width}, Converter={StaticResource RatioConverter}, ConverterParameter='0.25', FallbackValue='250', Mode=OneWay}"
    Height="{CompiledBinding Source={x:Type converterType:Height}, Converter={StaticResource RatioConverter}, ConverterParameter='0.2', FallbackValue='400', Mode=OneWay}"
    MaxHeight="300"
    MaxWidth="500"
    MinHeight="175"
    MinWidth="350"
    x:Class="Client_App.Views.Messages.AskDatePeriodMessageWindow"
    x:DataType="vm:AskDatePeriodMessageVM"
    Title="Запрос периода дат"
    WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:AskDatePeriodMessageVM/>
    </Design.DataContext>

    <Grid 
        ColumnDefinitions="0.48*,0.04*,0.48*"
        RowDefinitions="0.35*,0.35*,0.3*">
        <TextBlock 
            Grid.Column="0" 
            Grid.ColumnSpan="3" 
            Grid.Row="0"
            Margin="10"
            MinHeight="70"
            TextWrapping="Wrap"
            Text="Введите период дат, за который необходимо выполнить выгрузку. Если оставить поля незаполненными или заполнить некорректно, то выгрузка будет осуществляться без фильтра по датам."/>
        <CalendarDatePicker
            Grid.Column="0"
            Grid.Row="1"
            Margin="5"
            MinWidth="100"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Watermark="дд.мм.гг"
            Width="150"
            SelectedDate="{Binding InitialDate, Mode=TwoWay}"/>
        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="－"/>
        <CalendarDatePicker
            Grid.Column="2"
            Grid.Row="1"
            Margin="5"
            MinWidth="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Watermark="дд.мм.гг"
            Width="150"
            SelectedDate="{Binding ResidualDate, Mode=TwoWay}"/>
        <Button 
            Grid.Row="2"
            Grid.Column="0"
            Click="OnOkButtonClicked"
            Content="Ок"
            IsDefault="True"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            MaxHeight="30"
            Margin="0,5"
            VerticalContentAlignment="Center"
            Width="75"
            />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Click="OnCancelButtonClicked"
            IsCancel="True"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            MaxHeight="30"
            Margin="0,5"
            Width="75"
            Content="Отмена"/>
    </Grid>
</Window>
