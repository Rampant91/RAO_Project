<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Client_App.ViewModels.Messages"
        xmlns:behaviors="clr-namespace:Client_App.Behaviors"
        mc:Ignorable="d"
        x:Class="Client_App.Views.Messages.AskYearPeriodMessageWindow"
        x:CompileBindings="True"
        x:DataType="vm:AskYearPeriodMessageVM"
        Title="Запрос периода"
        MinWidth="250" MinHeight="250"
        d:DesignWidth ="500" d:DesignHeight ="250"
        behaviors:WindowScreenSizeBehavior.WidthRatio="0.25" behaviors:WindowScreenSizeBehavior.HeightRatio="0.2"
        WindowStartupLocation="Manual"
        CanResize="True">

  <Design.DataContext>
      <vm:AskYearPeriodMessageVM/>
  </Design.DataContext>

  <Grid ColumnDefinitions="0.48*,0.04*,0.48*"
        RowDefinitions="0.35*,0.35*,0.3*">
      <TextBlock Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Grid.Row="0"
                 Margin="10"
                 MinHeight="70"
                 TextWrapping="Wrap"
                 Text="Введите период, за который необходимо выполнить выгрузку. Если оставить поля незаполненными или заполнить некорректно, то выгрузка будет осуществляться без фильтра по датам."/>
      <TextBox Grid.Column="0"
               Grid.Row="1"
               Margin="5"
               MinWidth="100"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Watermark="гггг"
               Width="150"
               Text="{Binding InitialYear, Mode=TwoWay}"/>
      <TextBlock Grid.Column="1"
                 Grid.Row="1"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Text="－"/>
      <TextBox Grid.Column="2"
               Grid.Row="1"
               Margin="5"
               MinWidth="100"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Watermark="гггг"
               Width="150"
               Text="{Binding ResidualYear, Mode=TwoWay}"/>
      <Button Grid.Row="2"
              Grid.Column="0"
              Click="OnOkButtonClicked"
              Content="Ок"
              IsDefault="True"
              HorizontalAlignment="Right"
              HorizontalContentAlignment="Center"
              MaxHeight="30"
              Margin="0,5"
              VerticalContentAlignment="Center"
              Width="75"/>
      <Button Grid.Row="2"
              Grid.Column="2"
              Click="OnCancelButtonClicked"
              IsCancel="True"
              HorizontalAlignment="Left"
              HorizontalContentAlignment="Center"
              MaxHeight="30"
              Margin="0,5"
              Width="75"
              Content="Отмена"/>
  </Grid>
</Window>