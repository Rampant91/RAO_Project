				<TextBox/>
			</StackPanel>
			
			<TextBox Grid.Row="0" Grid.Column="1"
					 Watermark="(номер технических условий)"/>
			<TextBox Grid.Row="0" Grid.Column="2"
					 Grid.ColumnSpan="2"
					 Watermark="(название и класс РАО)"/>
			
			<TextBlock Grid.Row="1" Grid.Column="0" 
					   Text="Номер договора передачи РАО на захоронение"/>
			<TextBox Grid.Row="1" Grid.Column="1"/>
			
			<TextBlock Grid.Row="2" Grid.Column="0"
					   Text="Индивидуальный номер упаковки РАО"/>
			<TextBox Grid.Row="2" Grid.Column="1"
					   Watermark="(Идентификационный код)"/>
			<TextBox Grid.Row="2" Grid.Column="2"
					 Grid.ColumnSpan="2"
