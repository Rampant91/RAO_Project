<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client_App.AskSubjectRFMessage"
        Title="Выберите субъект"
		Width="320"
		Height="200"
		CanResize="False"
		WindowStartupLocation="CenterOwner">
	<StackPanel>
		<TextBlock Margin="10,5,10,5" Text="{Binding Text}" TextWrapping="Wrap"/>
		<Grid ColumnDefinitions="30,*" Margin="15">
			<TextBox Grid.Column="0"
					 Height="26"
					 Margin="0,0,0,3"
					 Text="{Binding CodeOfSubjectRF}"
					 MaxLength="2"/>
			<AutoCompleteBox
				x:Name="autoCompleteBox"
				Grid.Column="1"
				MaxDropDownHeight="300"
				Height="26"
				Items="{Binding SubjectRFCollection}"
				FilterMode="Contains"
				Margin="0,0,0,3"
				Text="{Binding NameOfSubjectRF}">
			</AutoCompleteBox>
		</Grid>
		<WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
			<Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,5,0">Подтвердить</Button>
			<Button Margin="0,0,10,0" Content="Отмена" Click="Cancel_Click"/>
		</WrapPanel>
	</StackPanel>
</Window>
