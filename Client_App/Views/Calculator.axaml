<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="500" Height="600"
        WindowStartupLocation="CenterScreen"
        x:Class="Client_App.Views.Calculator"
        xmlns:views="clr-namespace:Client_App.Views"
        xmlns:vm="clr-namespace:Client_App.ViewModels"
        x:DataType="vm:CheckFormVM"
        Icon="/Assets/logo.png"
        Title="{Binding WindowTitleName}">

  <Window.DataTemplates>
    <DataTemplate DataType="{x:Type vm:RadionuclideSelectionCalculatorVM}">
      <views:RadionuclideSelectionCalculator />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:RadionuclideCalculationVM}">
      <views:RadionuclideCalculation/>
    </DataTemplate>
  </Window.DataTemplates>
  
  <Design.DataContext>
    <vm:CalculatorVM/>
  </Design.DataContext>

  <Grid VerticalAlignment="Top" RowDefinitions="*">

      <Border Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top">
      <ContentControl Content="{Binding CurrentView}"/>
    </Border>
  </Grid>
</Window>