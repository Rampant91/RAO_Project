			<TextBlock Text="№"/> 
			<TextBox Watermark="(паспорта)"/>
			<TextBlock Text="от"/>
			<TextBox Watermark="(дата)"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Наименование"/>
			<TextBox Watermark="(тип упаковки РАО, неупакованных РАО)"/>
		</StackPanel>
		
		<StackPanel Orientation="Horizontal">
		</StackPanel>
		
